doctype html
html
  head
    title= "Poloniex"
    meta http-equiv="content-language" content="en"
    = csrf_meta_tags
    = stylesheet_link_tag 'poloniex', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'base', 'data-turbolinks-track': 'reload'
  body
    div#poloniex
      div#top-menu.container
        nav.nav
          div.nav-left
            a href="/poloniex"
              | Current Orders
            a href="/poloniex/compare_chart"
              | Charts
          div.nav-center
            | CENTER
          div.nav-right
            span.nav-item
              - if user_signed_in?
                a.button.is-primary href="/users/sign_out" data-method="delete"
                  | Logout
              - else
                a.button.is-primary href="/users/sign_in"
                  | Login
      section#main-content.section
        p.notice
          = notice
        p.alert
          = alert
        = yield
    
    = yield :javascripts
